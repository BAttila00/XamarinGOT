                            <DataTemplate>
                                <TextCell Text="{Binding name}" TextColor="#e20074" DetailColor="White" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
